<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    app:cardCornerRadius="10dp">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/linearcardviewalbum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:id="@+id/imageviewalbum"
            android:layout_width="200dp"
            android:layout_height="200dp"/>
        <TextView
            android:maxWidth="200dp"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="Bài hát mùa xuân sum vầy quá"
            android:ellipsize="end"
            android:maxLines="1"
            android:id="@+id/textviewtenalbum"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#878181"
            android:textSize="15sp"
            android:maxWidth="200dp"
            android:text="Mr Siro"
            android:ellipsize="end"
            android:maxLines="1"
            android:id="@+id/textviewtencasialbulm"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</android.support.v7.widget.CardView>